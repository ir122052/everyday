<div class="text-center">
    <h1>作成ページ</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @task, local: true) do |f| %>

      <div class="mt-5">
        <label><%= f.radio_button :title, 'エサ' %>エサ</label>
        <label><%= f.radio_button :title, '薬' %>薬</label>
      </div>
      
      <div class="form_group">
          <%= f.label :start_time, '日時' %>
          <%= f.datetime_select :start_time, class: 'form-control' %>
      </div>
      
      <div class="form-group">
          <%= f.label :amount, '量(g)' %>
          <%= f.number_field :amount, class: 'form-control', max: 50, min: 0 %>
      </div>
      
      <%= f.submit '作成', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>